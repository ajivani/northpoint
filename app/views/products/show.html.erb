<table class="profile" summary="Profile Information">
  <tr>
    <td class="main">
      <h1>
        <%= @product.name %>
      </h1>

      <%= image_tag(@product.image_url, :height=>300, :width=>250)%>
      
    </td>
    <td class="sidebar round">
      <strong>Product Code: </strong> <%=@product.sku%><br />
      <% if !@product.description.nil? %>
        <strong>Description: </strong><%=sanitize @product.description%><br />
      <%end%>
      
    </td>
  </tr>
</table>
  


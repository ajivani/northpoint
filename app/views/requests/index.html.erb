<h1>Listing requests</h1>

<table>
  <tr>
    <th>Current customer</th>
    <th>Company name</th>
    <th>Customer name</th>
    <th>Job title</th>
    <th>Phone number</th>
    <th>Email</th>
    <th>City</th>
    <th>Province or state</th>
    <th>Quote details</th>
    <th>Estimated quantity per order</th>
    <th>Estimated quantity per annum</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.current_customer %></td>
    <td><%= request.company_name %></td>
    <td><%= request.customer_name %></td>
    <td><%= request.job_title %></td>
    <td><%= request.phone_number %></td>
    <td><%= request.email %></td>
    <td><%= request.city %></td>
    <td><%= request.province_or_state %></td>
    <td><%= request.quote_details %></td>
    <td><%= request.estimated_quantity_per_order %></td>
    <td><%= request.estimated_quantity_per_annum %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

